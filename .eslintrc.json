{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "linebreak-style": "windows"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "linebreak-style": ["warn", "windows"],
    "no-console": "off"
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx",".ts"],
        "moduleDirectory": ["node_modules", "src/"]
      }
    }
  }
}
